    <!--#region SearchTextBox-->

    <ImageBrush x:Key="Search"
                ImageSource="\Resources\Styles\Pictures\TextBox\Search.png"
                Stretch="Uniform"/>
    <ImageBrush x:Key="Search_Active"
                ImageSource="\Resources\Styles\Pictures\TextBox\Search_Active.png"
                Stretch="Uniform"/>
    <ImageBrush x:Key="Search_Focused"
                ImageSource="\Resources\Styles\Pictures\TextBox\Search_Focused.png"
                Stretch="Uniform"/>

    <Style x:Key="SearchTextBox" TargetType="TextBox">
        <Setter Property="Foreground" Value="{StaticResource scb_Black}"/>
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="FontFamily" Value="Cascadia Code"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Width" Value="250"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Border x:Name="MainBorder"
                            CornerRadius="8"
                            Background="{StaticResource scb_White}">
                        <Grid Margin="{TemplateBinding Padding}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Focusable="false"
                                          Grid.Column="1"
                                          Margin="5 0 0 0"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Hidden"/>
                            <Border Background="{StaticResource Search}"
                                    x:Name="LogoBorder"
                                    Height="15"
                                    Width="15"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Margin="5 0 0 0"
                                    ToolTip="{TemplateBinding Tag}"/>
                            <Label x:Name="Watermark"
                                   Grid.Column="1"
                                   FontSize="12"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   Margin="5 0 0 0"
                                   Content="Поиск"
                                   Foreground="{StaticResource scb_Watermark}"
                                   Visibility="Collapsed"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource Search_Active}" TargetName="LogoBorder"/>
                        </Trigger>
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter Property="Background" Value="{StaticResource Search_Focused}" TargetName="LogoBorder"/>
                        </Trigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="Text" Value=""/>
                            </MultiTrigger.Conditions>
                            <Setter Property="Visibility" Value="Visible" TargetName="Watermark"/>
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!--#endregion-->

